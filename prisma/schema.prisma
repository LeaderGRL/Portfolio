generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Projects {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    description String
    name        String
    date        String
    // updatedAt   DateTime @updatedAt
    imageUrl    String
    link        String
}

model Experiences {
    id          String  @id @default(auto()) @map("_id") @db.ObjectId
    name        String
    description String[]
    date        String
    // createdAt   DateTime @default(now())
    // updatedAt   DateTime @updatedAt
}